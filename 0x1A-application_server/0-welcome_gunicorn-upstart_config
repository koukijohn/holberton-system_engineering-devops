# This is our upstart script that will start our application server
description "Gunicorn application server running 0-hello_route"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
setuid ubuntu
setgid www-data

script
    cd /home/ubuntu/AirBnB_clone_v2/
    exec gunicorn --workers 3 --bind 127.0.0.1:8000 web_flask.0-hello_route:app
end script
